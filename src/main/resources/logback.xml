<configuration>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/retailorders.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/retailorders.%d{yyyy-MM-dd}.gz</fileNamePattern>
		</rollingPolicy>
		<encoder>
		    <pattern>%d{HH:mm:ss.SSS} %-5level %X{REQ_ID} %X{CLIENT_INFO} %logger{36} %M %L  %m%n</pattern>
		</encoder>
	</appender>
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %X{REQ_ID} %X{CLIENT_INFO} %logger{36} %M %L %m%n</pattern>
		</encoder>
	</appender>
	<logger name="com.assessment" level="INFO" />
	<root level="INFO">
		<appender-ref ref="FILE"/>
		<appender-ref ref="CONSOLE"/>
	</root>
</configuration>